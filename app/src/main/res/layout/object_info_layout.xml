<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="22dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="22dp"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:background="@drawable/object_drawable"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/object_image_view"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_icon_wash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/address"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignTop="@id/object_image_view"
            android:layout_toEndOf="@id/object_image_view"
            android:text=""
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cashBack"
            android:layout_marginStart="16dp"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignBottom="@id/object_image_view"
            android:layout_toEndOf="@id/object_image_view"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="It's should be look like discount, but i guess it's just a textView, my DEAR FRIEND"
        android:layout_height="150dp"/>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/> &lt;!&ndash; высота акции&ndash;&gt;-->


</LinearLayout>