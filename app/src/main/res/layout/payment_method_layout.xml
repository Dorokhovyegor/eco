<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F9F9F9"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Введите сумму"
        android:drawableEnd="@drawable/rub_icon"
        android:paddingEnd="16dp"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:textSize="15sp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/web_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Картой в приложении"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000"
        android:drawableEnd="@drawable/credit_card_grey"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/price_input"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/google_pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="1dp"
        android:text="Купить с помощью Google Pay"
        android:drawableEnd="@drawable/googleg_standard_color_18"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/web_button"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>